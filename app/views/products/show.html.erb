<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if session[:user_id] != nil %>
      <%= form_for @review, url: product_reviews_path(@product) do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.hidden_field :user_id, value: session[:user_id] %>
        <%= f.text_area :description %>
        <%= f.select :rating, [1, 2, 3, 4, 5] %>
        <%= f.submit "Post Review" %>
      <% end %>
    <% else %>
      <div>Please log in to make a review</div>
    <% end %>

    <div class="row">
      <% @product.reviews.reverse_each do |r| %>
        <h4>User id: <%= r.user_id %></h4>
        <div><b>Description:</b> <%= r.description %></div>
        <div><b>Rating:</b> <%= r.rating %></div><br />
        <% if r.user_id == session[:user_id] %>
          <%= link_to product_review_path(@product, r.id), method: :delete do %>
          <span>Delete</span>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </article>

</section>
